<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<BorderPane prefHeight="365.0" prefWidth="584.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="il.cshaifasweng.OCSFMediatorExample.client.SOSReportsController" stylesheets="@/il/cshaifasweng/OCSFMediatorExample/client/SOSReportsStyle.css">
    <top>
        <VBox prefHeight="72.0" prefWidth="747.0" spacing="20" style="-fx-background-color: #ECEFF1; -fx-padding: 10;">
            <children>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Start Date:" />
                        <DatePicker fx:id="startDatePicker" />
                        <Label text="End Date:" />
                        <DatePicker fx:id="endDatePicker" />
                    </children>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Community:" />
                        <ComboBox fx:id="communityComboBox" minWidth="150" prefWidth="200.0" />
                        <Button fx:id="LoadDataButton" onAction="#handleloadDataButton" text="Load Data" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </top>
    <center>
        <BarChart fx:id="sosHistogram" animated="false" legendVisible="false" barGap="0.5" categoryGap="12.0" style="-fx-background-color: #ECEFF1;" prefHeight="301.0" prefWidth="533.0">
            <xAxis>
                <CategoryAxis label="Date" fx:id="xAxis" />
            </xAxis>
            <yAxis>
                <NumberAxis fx:id="yAxis" label="Number of Calls" />
            </yAxis>
        </BarChart>
    </center>
</BorderPane>
